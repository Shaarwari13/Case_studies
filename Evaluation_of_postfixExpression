#include <stdio.h>
#include <ctype.h>
#include <string.h>

#define MAX 100

int stack[MAX];
int top = -1;

// Push function
void push(int value) {
    stack[++top] = value;
}

// Pop function
int pop() {
    return stack[top--];
}

int main() {
    char postfix[MAX];
    int i, operand1, operand2, result;

    printf("Enter Postfix Expression: ");
    scanf("%s", postfix);

    for(i = 0; i < strlen(postfix); i++) {

        // If operand, push to stack
        if(isdigit(postfix[i])) {
            push(postfix[i] - '0');   // convert char to int
        }
        else {
            operand2 = pop();
            operand1 = pop();

            switch(postfix[i]) {
                case '+': result = operand1 + operand2; break;
                case '-': result = operand1 - operand2; break;
                case '*': result = operand1 * operand2; break;
                case '/': result = operand1 / operand2; break;
            }

            push(result);
        }
    }

    printf("Result = %d\n", pop());

    return 0;
}
